#!/bin/bash

# Verifica si se proporcion贸 un nombre de archivo
if [ -z "$1" ]; then
    echo "Uso: $0 archivo.cpp [argumentos]"
    exit 1
fi

# Compila el archivo C++
g++ -o output "$1"

# Verifica si la compilaci贸n fue exitosa
if [ $? -eq 0 ]; then
    echo "Compilaci贸n exitosa. Ejecutando el programa..."
    # Ejecuta el programa compilado con los argumentos adicionales
    ./output "${@:2}"
else
    echo "Error en la compilaci贸n."
    exit 1
fi
